{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    // Note: setting these two to NodeNext this breaks typing for apache-arrow
    "moduleResolution": "node",
    // "module": "NodeNext",
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2020",
    "declaration": true,
    "noEmit": false,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    // "lib": [
    //   "es2019.array", "es6", "dom"
    // ],
    "rootDir": "."
  }
}
